{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "http://mirror.nl.leaseweb.net/centos/7.1.1503/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso",
      "iso_checksum": "7cf1ac8da13f54d6be41e3ccf228dc5bb35792f515642755ff4780d5714d4278",
      "iso_checksum_type": "sha256",
      "headless": true,
      "http_directory": "./",
      "boot_command": [
        "<esc><wait>",
        "linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7.1-puppet3.ks",
        "<enter><wait>"
      ],
      "shutdown_command": "sudo shutdown -P now",
      "ssh_wait_timeout": "15m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "guest_additions_mode": "upload",
      "guest_additions_path": "/home/vagrant/VBoxGuestAdditions.iso"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo yum -y install bzip2 gcc kernel-headers kernel-devel-3.10.0-229.el7.x86_64",
        "sudo mkdir /tmp/isomount",
        "sudo mount -t iso9660 -o loop /home/vagrant/VBoxGuestAdditions.iso /tmp/isomount",
        "sudo /tmp/isomount/VBoxLinuxAdditions.run || true",
        "sudo umount /tmp/isomount",
        "sudo rm -rf /tmp/isomount /home/vagrant/VBoxGuestAdditions.iso",
        "sudo rpm -ivh https://yum.puppetlabs.com/puppetlabs-release-el-7.noarch.rpm",
        "sudo yum -y install puppet",
        "sudo mkdir -p /var/lib/puppet/state/graphs/"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "centos7.1-puppet3.box"
      },
      {
        "type": "atlas",
        "artifact": "jorisw/centos7.1-puppet3",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "version": "1.0.0",
          "created_at": "{{timestamp}}",
          "description": "# CentOS 7.1 x86_64 with the puppet 3 agent pre-installed.\n\nCan be used with `puppet apply` as a vagrant provisioner. The puppet agent service is not running by default. Firewall is enabled. Selinux is set to permissive.\n\nThe packer configuration can be found at https://github.com/Joris-van-der-Wel/centos7.1-puppet3-packer"
        }
      }
    ]
  ]
}
